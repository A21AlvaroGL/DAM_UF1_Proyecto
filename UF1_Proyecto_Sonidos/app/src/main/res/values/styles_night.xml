<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@drawable/purple_violet_gradient</item>
        <item name="itemIconTint">@color/icon_tint_bottom_navigation</item>
        <item name="itemTextColor">@color/icon_tint_bottom_navigation</item>
        <item name="labelVisibilityMode">selected</item>
    </style>

    <style name="CustomTitle" parent="Widget.AppCompat.TextView">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">2dp</item>
        <item name="fontFamily">@font/bebasneue</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>